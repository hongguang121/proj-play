(define new-word-formlet
  (formlet
   (#%# ,{input-string . => . spell})
   (values spell)))

(define date-formlet
  (formlet
   (div "Month:" ,{input-int . => . month}
        "Day:" ,{input-int . => . day})
   (list month day)))

