#lang racket

(define find
  (λ (lst index)
    (if (= index 0)
        '()
        (cons (car lst)
              (find (cdr lst) (- index 1))))))

(define splice
  (λ (lst index flag value)
    (cond ((null? lst) '())
          ((= index 0)
           (cond ((= flag 0)
                  (cons value lst))
                 (else (splice (cdr lst) index (- flag 1) value))))
          (else (cons (car lst)
                      (splice (cdr lst) (- index 1) flag value))))))

